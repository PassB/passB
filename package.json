    "modulePaths": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "testMatch": [
      "<rootDir>/src/**/?(*.)test.ts?(x)"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest/preprocessor.js"
    },
    "setupFiles": [
      "raf/polyfill"
